        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider1089206782504818"
            android:exported="true" />

        <receiver android:name="com.opentexas.cocoslib.facebook.FBResultHandler">
            <intent-filter>
